<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/coin_image"
        android:layout_width="@dimen/coin_select_dropdown_coin_image_size"
        android:layout_height="@dimen/coin_select_dropdown_coin_image_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/coin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/coin_select_dropdown_font_size"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/coin_select_dropdown_name_margin_left"
        android:layout_marginEnd="@dimen/coin_select_dropdown_name_margin_left"
        android:textColor="@color/homepageFontOnPrimary" />

    <TextView
        android:id="@+id/coin_ticker_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/coin_select_dropdown_font_size"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textColor="@color/homepageFontOnPrimary" />

</LinearLayout>
