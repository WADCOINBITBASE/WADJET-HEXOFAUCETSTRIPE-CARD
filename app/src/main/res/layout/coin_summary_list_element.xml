<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/homepage_list_element_padding_horizontal"
    android:paddingEnd="@dimen/homepage_list_element_padding_horizontal"
    android:paddingLeft="@dimen/homepage_list_element_padding_horizontal"
    android:paddingStart="@dimen/homepage_list_element_padding_horizontal" >

    <ImageView
        android:id="@+id/coin_image"
        android:layout_marginTop="@dimen/homepage_list_element_image_margin"
        android:layout_marginRight="@dimen/homepage_list_element_image_margin"
        android:layout_marginEnd="@dimen/homepage_list_element_image_margin"
        android:layout_marginBottom="@dimen/homepage_list_element_image_margin"
        android:layout_width="@dimen/homepage_list_element_coin_image_size"
        android:layout_height="@dimen/homepage_list_element_coin_image_size" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/coin_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/homepage_list_element_name_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coin_price_usd"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/homepage_list_element_price_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/coin_ticker_symbol"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_gravity="end"
                android:textSize="@dimen/homepage_list_element_ticker_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coin_quantity_and_owned_value"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_gravity="end"
                android:textSize="@dimen/homepage_list_element_quantity_text_size" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>